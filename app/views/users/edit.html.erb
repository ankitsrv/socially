<%= @user.email %>

<%= form_for @user, html: { multipart: true } do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <!--<div class="field">-->
      <%#= f.label :address %><br>
      <!--<#%= f.text_area :address %>-->
    <!--</div>-->
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
    <p>
      <label>
        <%= f.check_box :remove_image %>
        Remove image
      </label>
    </p>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>